<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:padding="20dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center">

    <TextView android:text="@string/create_user"
        style="@style/StartMainTitle"
        android:layout_marginBottom="50dp"
        android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
        android:drawablePadding="5dp"/>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bd_gray_10r_white">

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/input_name"
            style="@style/TextInputLayout">
            <EditText android:id="@+id/etName"
                style="@style/EditText"
                android:hint="@string/name"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:drawableRight="@drawable/ic_person_black_24dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/input_mobile"
            style="@style/TextInputLayout">
            <EditText android:id="@+id/etMobileNumber"
                style="@style/EditText"
                android:hint="@string/mobile_number"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:drawableRight="@drawable/ic_call_black_24dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/input_password"
            style="@style/TextInputLayout">
            <EditText android:id="@+id/etPassword"
                style="@style/EditText"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:drawableRight="@drawable/ic_lock_black_24dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button android:id="@+id/btnSignUp"
            android:text="@string/create"
            style="@style/StartMainButton" />

    </LinearLayout>

</LinearLayout>