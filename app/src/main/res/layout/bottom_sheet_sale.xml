<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLight"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

<!--    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"-->

    <ImageButton android:id="@+id/btnBottomSheetClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_red_24dp"
        android:background="@drawable/btn_flat_gray"
        android:padding="10dp"
        android:layout_gravity="right"/>

    <View style="@style/StyleDividerGrayLight"></View>

    <Button android:id="@+id/btnPayDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discount"
        android:gravity="left|center"
        android:textSize="@dimen/text_regular"
        android:background="@drawable/btn_flat_transparent"
        android:drawableRight="@drawable/ic_local_offer_24dp"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableTint="@color/colorPrimary"/>

    <View style="@style/StyleDividerGrayLight"></View>

    <Button android:id="@+id/btnHold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_flat_transparent"
        android:textSize="@dimen/text_regular"
        android:text="@string/hold"
        android:textColor="@color/colorPrimary"
        android:drawableRight="@drawable/ic_save_24dp"
        android:gravity="left|center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableTint="@color/colorPrimary"/>

</LinearLayout>