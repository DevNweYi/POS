<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CustomerRepayHistoryActivity"
    style="@style/DialogLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProfileTitle"
            style="@style/DialogTitle"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <ImageButton android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_red_24dp"
            android:background="@color/colorLight"
            android:padding="10dp"/>

    </LinearLayout>

    <View style="@style/StyleDividerLight"></View>

    <LinearLayout style="@style/DialogContent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_time"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_small"/>

        <TextView android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_time"
            android:textColor="@color/colorBlackDark"
            android:textSize="@dimen/text_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/colorBlackDark"
            android:textSize="@dimen/text_regular"/>

        <TextView android:id="@+id/tvLabelDebtAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/receivable"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/tvDebtAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/receivable"
            android:textColor="@color/colorBlackDark"
            android:textSize="@dimen/text_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paid_amount"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/tvPaidAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paid_amount"
            android:textColor="@color/colorBlackDark"
            android:textSize="@dimen/text_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remark"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/tvRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remark"
            android:textColor="@color/colorBlackDark"
            android:textSize="@dimen/text_regular"/>

    </LinearLayout>

    <View style="@style/StyleDividerLight"></View>

</LinearLayout>