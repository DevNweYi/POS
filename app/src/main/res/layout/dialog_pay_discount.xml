<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CategoryActivity"
    style="@style/DialogLayout">

    <TextView
        android:id="@+id/tvProfileTitle"
        style="@style/DialogTitle"
        android:text="@string/discount"/>

    <View style="@style/StyleDividerLight"></View>

    <LinearLayout style="@style/DialogContent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/imgDisPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/percent"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/bg_yellow_soft_5r"/>

            <ImageView android:id="@+id/imgDisAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/money"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@color/colorLight"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

            <EditText android:id="@+id/etDisPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bd_gray_1r"
                android:hint="@string/percent_hint"
                android:padding="10dp"
                android:textSize="@dimen/text_regular"
                android:textColor="@color/colorBlackLight"
                android:inputType="number"
                android:layout_marginTop="10dp"/>

            <EditText android:id="@+id/etDisAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bd_gray_1r"
                android:hint="@string/amount_hint"
                android:padding="10dp"
                android:textSize="@dimen/text_regular"
                android:textColor="@color/colorBlackLight"
                android:inputType="number"
                android:layout_marginTop="10dp"/>

    </LinearLayout>

    <View style="@style/StyleDividerLight"></View>

    <LinearLayout style="@style/DialogBottom">

        <Button android:id="@+id/btnCancel"
            style="@style/DialogClose" />

        <Button android:id="@+id/btnOk"
            style="@style/DialogOk"
            android:text="@string/ok"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>