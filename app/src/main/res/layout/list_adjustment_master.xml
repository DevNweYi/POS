<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvDamageID"
            style="@style/ListMainTextView"
            android:text="Damage ID" />

        <TextView android:id="@+id/tvTime"
            style="@style/ListSmallTextView"
            android:text="Time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center">

            <TextView android:id="@+id/tvTotalAmt"
                style="@style/ListMainTextView"
                android:text="Total Amount" />

            <TextView style="@style/StyleCurrency"/>

        </LinearLayout>

        <TextView android:id="@+id/tvUser"
            style="@style/ListSmallTextView"
            android:text="User"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>