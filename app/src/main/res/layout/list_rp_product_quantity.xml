<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView android:id="@+id/tvCode"
        style="@style/ReportData"
        android:layout_width="80dp"
        android:text="Code" />

    <TextView android:id="@+id/tvProduct"
        style="@style/ReportData"
        android:layout_width="200dp"
        android:text="Product" />

    <TextView android:id="@+id/tvUnit"
        style="@style/ReportData"
        android:layout_width="100dp"
        android:text="Unit" />

    <TextView android:id="@+id/tvCategory"
        style="@style/ReportData"
        android:layout_width="150dp"
        android:text="Category" />

    <TextView android:id="@+id/tvOpeningStock"
        style="@style/ReportData"
        android:layout_width="100dp"
        android:text="Opening Stock"
        android:gravity="right"/>

    <TextView android:id="@+id/tvPurchaseQty"
        style="@style/ReportData"
        android:layout_width="100dp"
        android:text="Purchase Qty"
        android:gravity="right"/>

    <TextView android:id="@+id/tvSaleQty"
        style="@style/ReportData"
        android:layout_width="100dp"
        android:text="Sale Qty"
        android:gravity="right"/>

    <TextView android:id="@+id/tvAdjustQty"
        style="@style/ReportData"
        android:layout_width="100dp"
        android:text="Adjust Qty"
        android:gravity="right"/>

    <TextView android:id="@+id/tvBalance"
        style="@style/ReportData"
        android:layout_width="100dp"
        android:text="Balance"
        android:gravity="right"/>

</LinearLayout>